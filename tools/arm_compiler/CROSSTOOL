  cpu: "k8"
  toolchain_identifier: "local"
}

default_toolchain {
  cpu: "darwin"
  toolchain_identifier: "local"
}

default_toolchain {
  cpu: "cortex-m3"
  toolchain_identifier: "cortex-m3-none"
}

# Version for Cortex-M3 with compiler from upstream

toolchain {
  abi_version: "gcc"
  abi_libc_version: "glibc_2.19"
  builtin_sysroot: ""
  compiler: "gcc"
  host_system_name: "cortex-m3"
  needsPic: false
  supports_gold_linker: false
  supports_incremental_linker: false
  supports_fission: false
  supports_interface_shared_objects: false
  supports_normalizing_ar: true
  supports_start_end_lib: false
  supports_thin_archives: true
  target_libc: "glibc_2.19"
  target_cpu: "cortex-m3"
  target_system_name: "cortex-m3-none-system"
  toolchain_identifier: "cortex-m3-none"

  tool_path { name: "ar" path: "arm_rtems5_gcc/arm-rtems5-ar" }
  tool_path { name: "compat-ld" path: "arm_rtems5_gcc/arm-rtems5-ld" }
  tool_path { name: "cpp" path: "arm_rtems5_gcc/arm-rtems5-gcc" }
  tool_path { name: "dwp" path: "arm_rtems5_gcc/arm-rtems5-dwp" }
  tool_path { name: "gcc" path: "arm_rtems5_gcc/arm-rtems5-gcc" }
  tool_path { name: "gcov" path: "arm-frc-rtems5/arm-frc-rtems5-gcov-4.9" }
  # C(++) compiles invoke the compiler (as that is the one knowing where
  # to find libraries), but we provide LD so other rules can invoke the linker.
  tool_path { name: "ld" path: "arm_rtems5_gcc/arm-rtems5-ld" }
  tool_path { name: "nm" path: "arm_rtems5_gcc/arm-rtems5-nm" }
  tool_path { name: "objcopy" path: "arm_rtems5_gcc/arm-rtems5-objcopy" }
  objcopy_embed_flag: "-I"
  objcopy_embed_flag: "binary"
  tool_path { name: "objdump" path: "arm_rtems5_gcc/arm-rtems5-objdump" }
  tool_path { name: "strip" path: "arm_rtems5_gcc/arm-rtems5-strip" }

  compiler_flag: "-mcpu=cortex-m3"
  compiler_flag: "-march=armv7-m"
  compiler_flag: "-mthumb"
  compiler_flag: "-fno-exceptions"
  # compiler_flag: "-fshort-wchar"
  compiler_flag: "-fdata-sections"
  compiler_flag: "-ffunction-sections"

  cxx_flag: "-I"
  cxx_flag: "external/com_arm_developer_toolchain_gcc_rtems/lib/gcc/arm-rtems5/7.3.0/include/c++/arm-rtems5"
  cxx_flag: "-I"
  cxx_flag: "external/com_arm_developer_toolchain_gcc_rtems/lib/gcc/arm-rtems5/7.3.0/include/c++"
  # cxx_flag: "-I"
  # cxx_flag: "external/com_arm_developer_toolchain_gcc_rtems/arm-rtems5/libc/usr/include"
  cxx_flag: "-std=c++14"

  cxx_builtin_include_directory: "%package(@com_arm_developer_toolchain_gcc_rtems//include)%"
  cxx_builtin_include_directory: "%package(@com_arm_developer_toolchain_gcc_rtems//arm-rtems5/include)%"
  cxx_builtin_include_directory: "%package(@com_arm_developer_toolchain_gcc_rtems//lib/gcc/arm-rtems5/7.3.0/include)%"

  linker_flag: "-mcpu=cortex-m3"
  linker_flag: "-march=armv7-m"
  linker_flag: "-mthumb"
  linker_flag: "-specs=nosys.specs"
  # linker_flag: "-lstdc++"

  linker_flag: "-Lexternal/com_arm_developer_toolchain_gcc_rtems/arm-rtems5/lib/thumb/"
  linker_flag: "-Lexternal/com_arm_developer_toolchain_gcc_rtems/arm-rtems5/lib/"
  linker_flag: "-Lexternal/com_arm_developer_toolchain_gcc_rtems/lib/gcc/arm-rtems5/7.3.0/"
  linker_flag: "-Bexternal/com_arm_developer_toolchain_gcc_rtems/arm-rtems5/bin"

  # Anticipated future default.
  # This makes GCC and Clang do what we want when called through symlinks.
  unfiltered_cxx_flag: "-no-canonical-prefixes"
  linker_flag: "-no-canonical-prefixes"

  # Make C++ compilation deterministic. Use linkstamping instead of these
  # compiler symbols.
  unfiltered_cxx_flag: "-Wno-builtin-macro-redefined"
  unfiltered_cxx_flag: "-D__DATE__=\"redacted\""
  unfiltered_cxx_flag: "-D__TIMESTAMP__=\"redacted\""
  unfiltered_cxx_flag: "-D__TIME__=\"redacted\""

  # Security hardening on by default.
  # Conservative choice; -D_FORTIFY_SOURCE=2 may be unsafe in some cases.
  # We need to undef it before redefining it as some distributions now have
  # it enabled by default.
  #compiler_flag: "-fno-stack-protector"

  # Enable coloring even if there's no attached terminal. Bazel removes the
  # escape sequences if --nocolor is specified.
  compiler_flag: "-fdiagnostics-color=always"

  # All warnings are enabled. Maybe enable -Werror as well?
  compiler_flag: "-Wall"
  compiler_flag: "-Wextra"
  compiler_flag: "-pedantic"
  # compiler_flag: "-Werror"
  # Enable a few more warnings that aren't part of -Wall.
  compiler_flag: "-Wunused-but-set-parameter"
  # But disable some that are problematic.
  compiler_flag: "-Wno-free-nonheap-object" # has false positives

  # Keep stack frames for debugging, even in opt mode.
  #compiler_flag: "-fno-omit-frame-pointer"

  #compiler_flag: "-D__weak=\"__attribute__((weak))\"" 
  compiler_flag: "-D__packed=\"__attribute__((__packed__))\""

  # Stamp the binary with a unique identifier.
  linker_flag: "-Wl,--gc-sections"

  compiler_flag: "-Os"

  compilation_mode_flags {
    mode: DBG
    # Enable debug symbols.
    compiler_flag: "-g"
    compiler_flag: "-gdwarf-2"
  }
  compilation_mode_flags {
    mode: OPT
    # No debug symbols.
    # Maybe we should enable https://gcc.gnu.org/wiki/DebugFission for opt or
    # even generally? However, that can't happen here, as it requires special
    # handling in Bazel.
    compiler_flag: "-g0"

    # Conservative choice for -O
    # -O3 can increase binary size and even slow down the resulting binaries.
    # Profile first and / or use FDO if you need better performance than this.
    #compiler_flag: "-Os"

    # Disable assertions
    compiler_flag: "-DNDEBUG"
    compiler_flag: "-fmessage-length=0"
    # Removal of unused code and data at link time (can this increase binary size in some cases?).
    compiler_flag: "-ffunction-sections"
    compiler_flag: "-fdata-sections"
    linker_flag: "-Wl,--gc-sections"
  }
}

